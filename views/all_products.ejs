<% include _layouts/header %>


    <div class="row products">
        <% products.forEach((p)=> {%>
            <div class="col-xs-12 col-md-3">
                <div class="card mt-4">
                    <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
                        <img class="card-img-top" src="/images/product_images//<%= p.image %>" alt="Card image ">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title product-title">
                            <%= p.title %>
                        </h5>
                        <h6 class="card-title product-price">$<%= parseFloat(p.price).toFixed(2) %>
                        </h6>
                        <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk
                                of the card's content.</p> -->
                        <a href="/products/<%= p.category %>/<%= p.slug %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>

            </div>
            <%}) %>
    </div>

    <% include _layouts/footer %>