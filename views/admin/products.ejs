<%- include('../_layouts/adminheader') %>
    <div class="mx-4 mt-4">

        <h2 class="page-title">Products</h2>
        <a href="/admin/products/add-product" class="btn btn-primary">Add a new product</a>

        <br><br>
        <% if (count> 0) {
            %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Product Image</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product)=> {%>
                        <tr>
                            <td>
                                <%= product.title %>
                            </td>
                            <td>
                                $<%= parseFloat(product.price).toFixed(2) %>
                            </td>
                            <td>
                                <%= product.category %>
                            </td>
                            <td>
                                <% if (product.image=="" ) { %>
                                    <img src="/images/noimage.png" alt="" width="50px" height="50px">
                                    <% } else {%>
                                        <img src="/images/product_images/<%= product.image %>" alt="" width="50px"
                                            height="50px">
                                        <%}%>
                            </td>
                            <td><a href="/admin/products/edit-product/<%= product._id %>">Edit</a></td>
                            <td><a class="confirmDeletion"
                                    href="/admin/products/delete-product/<%= product._id %>">Delete</a></td>
                        </tr>
                        <% });%>
                </tbody>
            </table>
    </div>
    <% } else {%>
        <h3 class="text-center">There are no products.</h3>
        <%} %>
            <%- include('../_layouts/adminfooter') %>